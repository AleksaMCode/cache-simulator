<Window
    x:Class="CacheSimulator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:MetroControls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CacheSimulator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CPU Cache Simulator"
    MinWidth="1000"
    MinHeight="500"
    Topmost="False">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid
            x:Name="memoryGeneratorsGrid"
            Grid.Row="0"
            Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Label Grid.Row="0" FontWeight="SemiBold">Generate trace file:</Label>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" VerticalAlignment="Center">Size:</Label>
                    <Separator
                        Grid.Column="1"
                        Width="23"
                        Background="Transparent" />
                    <ComboBox
                        x:Name="traceFileSizeComboBox"
                        Grid.Column="2"
                        Width="130"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        ToolTip="large is 10,000, medium 1,000 and small is 100 instructions.">
                        <ComboBoxItem IsSelected="True">small</ComboBoxItem>
                        <ComboBoxItem>medium</ComboBoxItem>
                        <ComboBoxItem>large</ComboBoxItem>
                    </ComboBox>
                    <Separator
                        Grid.Column="3"
                        Width="1"
                        Background="Transparent" />
                    <Button
                        x:Name="generateTraceFileButton"
                        Grid.Column="4"
                        Width="100"
                        Margin="5,2,5,2"
                        HorizontalAlignment="Left"
                        Click="GenerateTraceFile">
                        Generate
                    </Button>
                    <MetroControls:ProgressRing
                        Name="traceFileProgressRing"
                        Grid.Column="5"
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Left"
                        Foreground="Black"
                        IsActive="False"
                        Visibility="Hidden" />
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label Grid.Row="0" FontWeight="SemiBold">Generate RAM file:</Label>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock>
                            Size<LineBreak />
                            (in MB):</TextBlock>
                    </Label>
                    <MetroControls:NumericUpDown
                        x:Name="ramSizeNumericUpDown"
                        Grid.Column="1"
                        Width="130"
                        Margin="7,5,0,5"
                        HorizontalAlignment="Left"
                        Interval="500"
                        Maximum="2000"
                        Minimum="500"
                        PreviewTextInput="TextBoxNumberValidator"
                        ToolTip="Current maximum RAM value is 2 GB."
                        Value="500" />
                    <Button
                        x:Name="generateRamFileButton"
                        Grid.Column="2"
                        Width="100"
                        Margin="5,5,5,5"
                        HorizontalAlignment="Left"
                        Click="GenerateRamFile">
                        Generate
                    </Button>
                    <MetroControls:ProgressRing
                        Name="ramFileProgressRing"
                        Grid.Column="3"
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Left"
                        Foreground="Black"
                        IsActive="False"
                        Visibility="Collapsed" />
                </Grid>
            </Grid>
            <Separator
                Grid.Row="2"
                Height="10"
                Background="Transparent" />
            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Label FontWeight="SemiBold">Load cache files (trace and RAM file):</Label>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0">Load trace file:</Label>
                    <TextBox
                        x:Name="traceFileNameTextBox"
                        Grid.Column="1"
                        IsReadOnly="True" />
                    <Button
                        Grid.Column="2"
                        Margin="5,0,0,0"
                        Click="TraceFilePicker">
                        Choose
                    </Button>
                </Grid>
                <Separator
                    Grid.Row="2"
                    Width="20"
                    Background="Transparent" />
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" VerticalAlignment="Center">Load RAM file:</Label>
                    <TextBox
                        x:Name="ramFileNameTextBox"
                        Grid.Column="1"
                        IsReadOnly="True" />
                    <Button
                        Grid.Column="2"
                        Margin="5,0,0,0"
                        Click="RamFilePicker">
                        Choose
                    </Button>
                </Grid>
            </Grid>
        </Grid>
        <Rectangle
            Grid.Row="0"
            Grid.Column="1"
            Width="0.8"
            Margin="2"
            VerticalAlignment="Stretch"
            Stroke="Black" />
        <Grid
            x:Name="cacheParametersGrid"
            Grid.Row="0"
            Grid.Column="2"
            VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0">Cache size:</Label>
                <Separator
                    Grid.Column="1"
                    Width="63"
                    Background="Transparent" />
                <TextBox
                    x:Name="cacheSize"
                    Grid.Column="2"
                    Width="50"
                    VerticalContentAlignment="Center"
                    PreviewTextInput="TextBoxNumberValidator" />
            </Grid>
            <Separator
                Grid.Row="1"
                Height="1"
                Background="Transparent" />
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0">Cache line size:</Label>
                <Separator
                    Grid.Column="1"
                    Width="41"
                    Background="Transparent" />
                <TextBox
                    x:Name="cacheLineSize"
                    Grid.Column="2"
                    Width="50"
                    VerticalContentAlignment="Center"
                    PreviewTextInput="TextBoxNumberValidator" />
            </Grid>
            <Separator
                Grid.Row="3"
                Height="1"
                Background="Transparent" />
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0">Cache associativity:</Label>
                <Separator
                    Grid.Column="1"
                    Width="20"
                    Background="Transparent" />
                <ComboBox
                    x:Name="cacheAssociativityComboBox"
                    Grid.Column="2"
                    Width="238"
                    Margin="0,0,4,0"
                    VerticalAlignment="Center"
                    SelectionChanged="CacheAssociativityChanged">
                    <ComboBoxItem IsSelected="True">Directly mapped</ComboBoxItem>
                    <ComboBoxItem>N-way set associative</ComboBoxItem>
                    <ComboBoxItem>Fully associative</ComboBoxItem>
                </ComboBox>
                <TextBox
                    x:Name="cacheAssociativityTxtBox"
                    Grid.Column="3"
                    Width="50"
                    VerticalContentAlignment="Center"
                    PreviewTextInput="TextBoxNumberValidator"
                    Visibility="Collapsed" />
            </Grid>
            <Separator
                Grid.Row="5"
                Height="1"
                Background="Transparent" />
            <Grid Grid.Row="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0">Write-hit policy:</Label>
                <Separator
                    Grid.Column="1"
                    Width="38"
                    Background="Transparent" />
                <ComboBox
                    x:Name="cacheWriteHitPolicyComboBox"
                    Grid.Column="2"
                    Width="238"
                    Margin="0,0,4,0"
                    VerticalAlignment="Center">
                    <ComboBoxItem IsSelected="True">Write-back</ComboBoxItem>
                    <ComboBoxItem>Write-through</ComboBoxItem>
                </ComboBox>
            </Grid>
            <Separator
                Grid.Row="7"
                Height="1"
                Background="Transparent" />
            <Grid Grid.Row="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0">Write-miss policy:</Label>
                <Separator
                    Grid.Column="1"
                    Width="28"
                    Background="Transparent" />
                <ComboBox
                    x:Name="cacheWriteMissPolicyComboBox"
                    Grid.Column="2"
                    Width="238"
                    Margin="0,0,4,0"
                    VerticalAlignment="Center">
                    <ComboBoxItem IsSelected="True">Write allocate</ComboBoxItem>
                    <ComboBoxItem>No-write allocate</ComboBoxItem>
                </ComboBox>
            </Grid>
            <Separator
                Grid.Row="9"
                Height="1"
                Background="Transparent" />
            <Grid Grid.Row="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0">Replacement policy:</Label>
                <Separator
                    Grid.Column="1"
                    Width="17"
                    Background="Transparent" />
                <ComboBox
                    x:Name="cacheReplacementPolicyComboBox"
                    Grid.Column="2"
                    Width="238"
                    Margin="0,0,4,0"
                    VerticalAlignment="Center">
                    <ComboBoxItem IsSelected="True">Least recently used (LRU)</ComboBoxItem>
                    <ComboBoxItem>Most recently used (MRU)</ComboBoxItem>
                    <ComboBoxItem>First in first out (FIFO)</ComboBoxItem>
                    <ComboBoxItem>Last in first out (LIFO)</ComboBoxItem>
                    <ComboBoxItem>Bélády's algorithm</ComboBoxItem>
                    <ComboBoxItem>Random replacement (RR)</ComboBoxItem>
                    <ComboBoxItem IsEnabled="False">Time aware least recently used (TLRU)</ComboBoxItem>
                    <ComboBoxItem IsEnabled="False">Least-frequently used (LFU)</ComboBoxItem>
                    <ComboBoxItem IsEnabled="False">LFU with dynamic aging (LFUDA)</ComboBoxItem>
                </ComboBox>
            </Grid>
            <Separator
                Grid.Row="11"
                Height="1"
                Background="Transparent" />
            <Grid Grid.Row="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0">Cache level(s):</Label>
                <Separator
                    Grid.Column="1"
                    Width="48"
                    Background="Transparent" />
                <ComboBox
                    x:Name="cacheTypeComboBox"
                    Grid.Column="2"
                    Width="238"
                    Margin="0,0,4,0"
                    VerticalAlignment="Center">
                    <ComboBoxItem IsSelected="True">L1 (data)</ComboBoxItem>
                    <ComboBoxItem IsEnabled="False">L1 (instruction and data)</ComboBoxItem>
                    <ComboBoxItem IsEnabled="False">L1 and L2</ComboBoxItem>
                </ComboBox>
            </Grid>
            <Separator
                Grid.Row="13"
                Height="1"
                Background="Transparent" />
            <Grid Grid.Row="14">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0">Type of CPU:</Label>
                <Separator
                    Grid.Column="1"
                    Width="55"
                    Background="Transparent" />
                <ComboBox
                    x:Name="numberOfCoresComboBox"
                    Grid.Column="2"
                    Width="238"
                    Margin="0,0,4,0"
                    SelectionChanged="CpuTypeChanged"
                    VerticalAlignment="Center">
                    <ComboBoxItem IsSelected="True">Single-core</ComboBoxItem>
                    <ComboBoxItem>Dual-core</ComboBoxItem>
                    <ComboBoxItem>Multi-cores</ComboBoxItem>
                </ComboBox>
                <TextBox
                    x:Name="cpuCoreNumberTxtBox"
                    Grid.Column="3"
                    Width="50"
                    VerticalContentAlignment="Center"
                    PreviewTextInput="TextBoxNumberValidator"
                    Visibility="Collapsed" />
            </Grid>
        </Grid>
        <Separator
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Height="4"
            Margin="0,5,0,0"
            Background="Black" />
        <Separator
            Grid.Row="2"
            Grid.ColumnSpan="3"
            Height="1"
            Margin="0,5,0,0"
            Background="Transparent" />
        <Grid
            x:Name="simulationContolsGrid"
            Grid.Row="3"
            Grid.ColumnSpan="3"
            Height="30"
            HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <MetroControls:ProgressRing
                Name="cacheLogProgressRing"
                Grid.Column="0"
                Width="30"
                Height="30"
                Foreground="Black"
                IsActive="False"
                Visibility="Hidden" />
            <Separator
                Grid.Column="1"
                Width="10"
                Margin="0,5,0,0"
                Background="Transparent" />
            <Button
                x:Name="startSimulationButton"
                Grid.Column="2"
                Width="120"
                Click="StartSimulation">
                Start Simulation
            </Button>
            <Separator
                Grid.Column="3"
                Width="10"
                Margin="0,5,0,0"
                Background="Transparent" />
            <Button
                x:Name="stopSimulationButton"
                Grid.Column="4"
                Width="120"
                IsEnabled="False">
                Stop Simulation
            </Button>
        </Grid>
        <Separator
            Grid.Row="4"
            Width="10"
            Margin="0,5,0,0"
            Background="Transparent" />
        <Grid
            x:Name="cacheStatsGrid"
            Grid.Row="5"
            Grid.ColumnSpan="3">
            <TextBox
                x:Name="cacheStatsTextBox"
                AcceptsReturn="True"
                HorizontalScrollBarVisibility="Disabled"
                IsReadOnly="True"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Visible" />
        </Grid>
    </Grid>
</Window>
